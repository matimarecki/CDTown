@model List<BookModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 style="text-align: center">Books</h2>
<div class="mt-3 ml-3 mr-3" style="text-align: center;">
    <button class="mr-2 ml-2" onclick="location.href='https://localhost:5001'">Go back Home</button>
</div>
<div class="mt-3 ml-3 mr-3" style="text-align: center;">
    <div class="row">
        <div class="col-4">
            <form method="post" asp-controller="Books" asp-action="AddBook">
                <p>Title</p>
                <br>
                <input type="text" name="Name" required>
                <br>
                <p>Number of Pages</p>
                <br>
                <input type="number" name="Pages" required>
                <br>
                <p>Year of Release</p>
                <br>
                <input type="number" name="ReleaseYear" required>
                <br>
                <button type="submit" class="btn btn-dark">Create</button>
            </form>
        </div>
        <div class="col-8 card">
            <div class="row card-header">
                <div class="col-1">
                    Id
                </div>
                <div class="col-3">
                    Title
                </div>
                <div class="col-3">
                    Pages
                </div>
                <div class="col-3">
                    Release Year
                </div>
                <div class="col-2"></div>
            </div>
            <div class="row card-body">
                @foreach (BookModel currBook in Model) {
                    <div class="col-1">
                        @currBook.Id
                    </div>
                    <div class="col-4" style="text-align: left">
                        @currBook.Name
                    </div>
                    <div class="col-3" style="text-align: right">
                        @currBook.Pages
                    </div>
                    <div class="col-2" style="text-align: right">
                        @currBook.ReleaseYear
                    </div>
                    <div class="col-2" style="text-align: center">
                        <a asp-controller="Books" asp-action="RemoveBook" asp-route-removedBook="@currBook.Id"> X </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>